      <ImageView fx:id="iv" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" />
      <VBox prefHeight="120.0" prefWidth="325.0">
         <children>
            <Label fx:id="tv_name" prefHeight="18.0" prefWidth="88.0" text="Product Name :">
               <VBox.margin>
                  <Insets left="130.0" top="20.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="tv_price" layoutX="140.0" layoutY="10.0" prefHeight="18.0" prefWidth="88.0" text="Product Price :">
               <VBox.margin>
                  <Insets left="130.0" top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <Button fx:id="btn_edit" layoutX="345.0" layoutY="14.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="62.0" text="Edit" />
      <Button fx:id="btn_delete" layoutX="345.0" layoutY="47.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="62.0" text="Delete" />
   </children>
</AnchorPane>
